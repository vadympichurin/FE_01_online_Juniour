{{#each this}}
  <li class='gallery__item'>
    <div class='gallery__thumb'>
      <img src='{{flag}}' alt='Прапор {{name}}' width='320' />
    </div>

    <h2>{{name}}</h2>
    <p>Столиця: {{capital}}</p>
    <p>Валюта: {{currency}}</p>
    <p>Мова: {{language}}</p>
    <p>Населення: {{population}}</p>
    {{#if infected}}
        <p style="color: red">Все пропало, треба тікати. Навколо зомбі!</p>
    {{/if}}

    {{#unless infected}}
        <p style="color: green">Все добре, можна їхати!</p>
    {{/unless}}
  </li>
{{/each}}